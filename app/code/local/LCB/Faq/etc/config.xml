<?xml version="1.0"?>
<config>
    <modules>
        <LCB_Faq>
            <version>1.0.2</version>
        </LCB_Faq>
    </modules>
    <frontend>
        <routers>
            <faq>
                <use>standard</use>
                <args>
                    <module>LCB_Faq</module>
                    <frontName>faq</frontName>
                </args>
            </faq>
        </routers>
        <layout>
            <updates>
                <faq>
                    <file>faq.xml</file>
                </faq>
            </updates>
        </layout>
    </frontend>
    <global>
        <helpers>
            <faq>
                <class>LCB_Faq_Helper</class>
            </faq>
        </helpers>
        <blocks>
            <faq>
                <class>LCB_Faq_Block</class>
            </faq>
        </blocks>
        <models>
            <faq>
                <class>LCB_Faq_Model</class>
                <resourceModel>faq_mysql4</resourceModel>
            </faq>
            <faq_mysql4>
                <class>LCB_Faq_Model_Mysql4</class>
                <entities>		  
                    <faq>
                        <table>lcb_faq</table>
                    </faq>
                    <category>
                        <table>lcb_faq_category</table>
                    </category>
                </entities>
            </faq_mysql4>
        </models>
        <resources>
            <lcb_faq_setup>
                <setup>
                    <module>LCB_Faq</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </lcb_faq_setup>
            <faq_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </faq_write>
            <faq_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </faq_read>
        </resources>
    </global>
    <admin>
        <routers>
            <admin_faq>
                <use>admin</use>
                <args>
                    <module>LCB_Faq</module>
                    <frontName>admin_faq</frontName>
                </args>
            </admin_faq>
        </routers>
    </admin>
    <adminhtml>
        <menu>
            <cms>
                <children>
                    <faq module="faq">
                        <title>Faq</title>
                        <sort_order>100</sort_order>
                        <children>
                            <faq module="faq">
                                <title>Questions and Answers</title>
                                <sort_order>0</sort_order>
                                <action>admin_faq/adminhtml_faq</action>
                            </faq>
                            <categories module="faq">
                                <title>Categories</title>
                                <sort_order>1</sort_order>
                                <action>admin_faq/adminhtml_categories</action>
                            </categories>
                        </children>
                    </faq>
                </children>
            </cms>
        </menu>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <cms>
                            <children>
                                <faq translate="title" module="faq">
                                    <title>Faq</title>
                                    <sort_order>1000</sort_order>
                                    <children>
                                        <faq translate="title">
                                            <title>Questions and Answers</title>
                                            <sort_order>0</sort_order>
                                        </faq>
                                        <categories translate="title">
                                            <title>Categories</title>
                                            <sort_order>1</sort_order>
                                        </categories>
                                    </children>
                                </faq> 
                            </children>
                        </cms>
                    </children>
                </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <faq>
                    <file>faq.xml</file>
                </faq>
            </updates>
        </layout>
    </adminhtml>
</config> 